<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#FFFFFF">

        <TextView
            android:id="@+id/textViewEmail"
            android:layout_width="108dp"
            android:layout_height="39dp"
            android:layout_marginStart="44dp"
            android:fontFamily="sans-serif-black"
            android:text="Email         :"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintVertical_bias="0.169" />

        <TextView
            android:id="@+id/textViewKolomEmail"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:fontFamily="sans-serif"
            android:text="email"
            android:textColor="#A4000000"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textViewEmail"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintVertical_bias="0.171" />

        <TextView
            android:id="@+id/textViewKolomEmail2"
            android:layout_width="223dp"
            android:layout_height="44dp"
            android:layout_marginStart="16dp"
            android:fontFamily="sans-serif"
            android:text="username"
            android:textColor="#A4000000"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textViewEmail"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintVertical_bias="0.316" />

        <TextView
            android:id="@+id/textViewUsername"
            android:layout_width="115dp"
            android:layout_height="41dp"
            android:fontFamily="sans-serif-black"
            android:text="Username :"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textViewEmail"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintVertical_bias="0.323" />

        <RelativeLayout
            android:id="@+id/bg_top_keamanan"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/heading"
            android:backgroundTint="#41d953"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/image_back"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:clickable="true"
                android:onClick="onBackPressed"
                android:src="@drawable/vector"
                tools:ignore="TouchTargetSizeCheck"></ImageView>

            <TextView
                android:layout_width="101dp"
                android:layout_height="24dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="155dp"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:text="Profil"
                android:textAppearance="@style/kebakaran"></TextView>
        </RelativeLayout>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="168dp"
            android:layout_height="197dp"
            android:layout_marginTop="36dp"
            android:src="@drawable/ic_username"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bg_top_keamanan" />

        <Button
            android:id="@+id/buttonEdit"
            android:layout_width="147dp"
            android:layout_height="55dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="#526CF6"
            android:fontFamily="sans-serif-black"
            android:text="Edit Username"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.407"
            app:layout_constraintStart_toStartOf="@+id/textViewUsername"
            app:layout_constraintTop_toBottomOf="@+id/textViewUsername" />

        <Button
            android:id="@+id/buttonLogout"
            android:layout_width="103dp"
            android:layout_height="59dp"
            android:layout_marginTop="36dp"
            android:backgroundTint="#F03B3B"
            android:fontFamily="sans-serif-black"
            android:text="Logout"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.95"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bg_top_keamanan" />

        <Button
            android:id="@+id/buttonGantiPassword"
            android:layout_width="147dp"
            android:layout_height="55dp"
            android:layout_marginTop="116dp"
            android:backgroundTint="#526CF6"
            android:fontFamily="sans-serif-black"
            android:text="Ganti Password"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.407"
            app:layout_constraintStart_toStartOf="@+id/textViewUsername"
            app:layout_constraintTop_toBottomOf="@+id/textViewUsername" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>