<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="193dp"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <RelativeLayout

            android:id="@+id/bg_topkeamananlist"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_topkeamananlist"
            android:backgroundTint="#F7ECE11B"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Tambahkan layout_gravity di sini -->

            <!-- Bagian yang sudah ada -->

            <Button
                android:id="@+id/btndetail"
                android:layout_width="87dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="end|top"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="9dp"
                android:text="Detail" />

            <TextView
                android:id="@+id/kolomtanggalkejadian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="21dp"
                android:text="DD-MM-YYYY"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/kolomketerangan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="0dp"
            android:text="Keterangan"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"
            android:textSize="20sp" />


    </LinearLayout>

</androidx.cardview.widget.CardView>
